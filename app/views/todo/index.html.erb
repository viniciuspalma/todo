<script type="text/x-handlebars" data-template-name="todos">
  <header class="header">
    <h1 class="title-header">TODOS</h1>
    <ul class="counters">
      <li class="qtd-done">{{done}}</li>
      <li class="qtd-n-done">{{remaining}}</li>
    </ul>
  </header>

  <section class="container">
    <ul class="list-todo">
      <li>
      {{input type="text" id="new-todo" placeholder="Escreva uma nova tarefa..." class="input-new-todo" value=newTitle action="createTodo"}}</li>
      {{#each itemController="todo"}}
        <li {{bind-attr class="active:task-complete:task-incomplete"}}>
          <p {{bind-attr class="active:task-complete-title:task-incomplete-title"}}{{action "updateTodo"}}>{{title}}</p>
          <button class="button btn-remove-todo" {{action "deleteTodo"}}>Excluir</button>
        </li>
      {{/each}}
    </ul>
  </section>
</script>
